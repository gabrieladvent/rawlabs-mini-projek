<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.TampilanAwal"
    android:background="@drawable/gmbrdpn">

    <androidx.cardview.widget.CardView
        android:layout_width="360dp"
        android:layout_height="270dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textBackTo"
            android:layout_width="300dp"
            android:layout_height="102dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/cantata_one"
            android:gravity="center_horizontal|top"
            android:lineSpacingExtra="-4sp"
            android:text="@string/backToThe"
            android:textColor="#000000"
            android:textSize="28sp"/>

        <TextView
            android:id="@+id/overspace"
            android:layout_width="300dp"
            android:layout_height="63dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="120dp"
            android:gravity="center_horizontal|top"
            android:lineSpacingExtra="2sp"
            android:text="@string/over"
            android:textAlignment="center"
            android:textColor="#6C748A"
            android:textSize="14sp"
            android:translationY="-1.05sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/getStarted"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="200dp"
            android:background="@drawable/bcgrnd"
            android:fontFamily="@font/cantata_one"
            android:text="Get Started"
            android:textColor="@color/white"
            android:textSize="16sp"/>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>